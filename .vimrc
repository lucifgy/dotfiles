set nocompatible
syntax on
filetype plugin indent on

set enc=utf-8
set fenc=utf-8
set termencoding=utf-8

set tabstop=2
set expandtab
set softtabstop=2
set shiftwidth=2

set autoindent
set smartindent

set number
set showmatch

set showcmd

set backspace=indent,eol,start

set laststatus=1

set incsearch
set hlsearch

set scrolloff=4

set nobackup
