set enc=utf-8
set fenc=utf-8
set termencoding=utf-8

syntax on
filetype plugin indent on
set nocompatible

set tabstop=2     ""ts
set expandtab     ""et
set softtabstop=2 ""sts
set shiftwidth=2  ""sw

set autoindent    ""ai
set smartindent   ""si

set number
set showmatch

set backspace=indent,eol,start

set laststatus=1

set incsearch
set hlsearch

set nobackup
